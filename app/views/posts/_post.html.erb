
<% provide(:title, 'Resultado de busqueda')%>

<% if @posts.any? %>
	<ul>
		<li>
			<%= link_to post.title.capitalize, post %> <%=  truncate(post.content, length: 70) %> por <%= post.user.username.capitalize %>
			<% if @author == post.user.username %>
				<%= link_to 'Edit', edit_post_path(post) %>
				<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>

				<% else %>

				<%= "" %>
			 <% end %>
			 
	</ul>

<% end %>


<%= link_to "Volver", posts_path %>